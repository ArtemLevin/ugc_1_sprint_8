# Kafka configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC=user_events
KAFKA_DLQ_TOPIC=dlq_user_events
KAFKA_GROUP_ID=etl-consumer-group
KAFKA_AUTO_OFFSET_RESET=earliest


# Redis configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_EVENTS_KEY=events_buffer
REDIS_DLQ_KEY=dlq_events


# ClickHouse configuration
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=9000
CLICKHOUSE_CLIENT_PORT=9000
CLICKHOUSE_DATABASE=default
CLICKHOUSE_TABLE=user_events
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=


# Jaeger configuration (for distributed tracing)
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831
JAEGER_COLLECTOR_ENDPOINT=http://localhost:14268/api/traces


# ETL configuration
BATCH_SIZE=100
BATCH_TIMEOUT=5
MAX_RETRIES=3
RETRY_DELAY=2
PROCESS_INTERVAL=1


# API service configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=False


# Application-wide settings
SERVICE_NAME=cinema-analytics
LOG_LEVEL=INFO
ENVIRONMENT=development